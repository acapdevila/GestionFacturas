@model EditorEmail
          
  
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    

                    <div class="form-group">
                        <label asp-for="DisplayName" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <select asp-for="DisplayName" asp-items="@Model.NombresRemitentes" class="form-select">
                                <option></option>
                            </select>
                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                            
                        </div>
                    </div>
    
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.Remitente, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <select asp-for="Remitente" asp-items="@Model.EmailRemitentes" class="form-select">
            <option></option>
                            </select>
                            @Html.ValidationMessageFor(model => model.Remitente, "", new { @class = "text-danger" })
                        </div>
                    </div>                

                    <div class="form-group">
                        @Html.LabelFor(model => model.Asunto, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Asunto, htmlAttributes : new { @class = "form-control"} )
                            @Html.ValidationMessageFor(model => model.Asunto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ContenidoHtml, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.ContenidoHtml, new { @class = "form-control", rows="10" })
                            @Html.ValidationMessageFor(m => m.ContenidoHtml, "", new { @class = "text-danger" })
                        </div>
                    </div>
<div class="form-group">
    @Html.LabelFor(m => m.Destinatarios, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Destinatarios, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Destinatarios, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.ArchivosAdjuntos, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        <input type="file" asp-for="ArchivosAdjuntos" class="form-control" multiple="" />
        @Html.ValidationMessageFor(m => m.ArchivosAdjuntos, "", new { @class = "text-danger" })
    </div>
              
</div>
    

