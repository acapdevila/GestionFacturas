@page "{id}"
@model EnviarFacturaPorEmailModel

@{
    ViewBag.Title = "Enviar factura";
}

<div class="container">
    <h2>Enviar factura @Model.NumeroFactura</h2>
    <form method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-body">
            
            <partial model="@Model.EditorEmail" name="Shared/EditorEmail"/>
            
            
           

        </div>
    </div>

   
       

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.NumeroFactura)
        @Html.HiddenFor(m => m.MostrarCheckEnviarAHacienda)
        <p>
            <div class="col-md-12">
                
                @if (Model.MostrarCheckEnviarAHacienda)
                {
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="EnviarAHacienda"/>
                        <label class="form-check-label" asp-for="EnviarAHacienda">Enviar a Hacienda prèviamente</label>
                    </div>
                }

                <input type="submit" value="Enviar" class="btn btn-primary"/>

                <a asp-page="@DetallesFacturaModel.NombrePagina" asp-route-id="@Model.Id" class="btn btn-primary">Detalles</a>
                <a asp-page="@ListaGestionFacturasModel.NombrePagina" class="btn btn-link">Volver a la lista de facturas</a>

            </div>
        </p>

    </form>
    <br/><br/>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

