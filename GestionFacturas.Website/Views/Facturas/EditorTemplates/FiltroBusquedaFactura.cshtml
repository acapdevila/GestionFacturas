@model GestionFacturas.Modelos.FiltroBusquedaFactura
@{
    string modelComando = string.Concat(ViewData.TemplateInfo.HtmlFieldPrefix, ".", "Comando");
}

    <div class="form-group">
        @Html.TextBoxFor(m => m.NombreOEmpresaCliente, new { @class = "form-control", placeholder = "Nombre o empresa cliente" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Conceptos, new { @class = "form-control", placeholder = "Conceptos" })
    </div>
    <div class="form-group">
        @Html.EditorFor(m => m.FechaDesde, "Fecha")
    </div>
    <div class="form-group">
        @Html.EditorFor(m => m.FechaHasta, "Fecha")
    </div>
    <div class="form-group">
        @Html.EnumDropDownListFor(m => m.OrdenarPorEnum, htmlAttributes: new { @class = "form-control" }, optionLabel: "Ordenar por")
    </div>
    <input type="submit" class="btn btn-info" name="@modelComando" value="Buscar"/>