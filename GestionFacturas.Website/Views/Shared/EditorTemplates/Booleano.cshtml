@model bool? 
 
@if (ViewData.ModelMetadata.IsNullableValueType)
{ 
    var listTri = new[] {
                new SelectListItem { Text = "Selecciona una opción",
                                     Value = String.Empty,
                                     Selected = !Model.HasValue },
                new SelectListItem { Text = "Sí",
                                     Value = "true",
                                     Selected = Model.HasValue && Model.Value },
                new SelectListItem { Text = "No",
                                     Value = "false",
                                     Selected = Model.HasValue && !Model.Value }};
    
    var list =  new SelectList(listTri,"Value","Text", listTri.First(m => m.Selected).Value);
     
    @Html.DropDownListFor(m=>m,list)      
}
else
{ 
    @Html.CheckBox("",Model.Value) 
}